<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Erzeugen der Band-Tabelle -->
    <changeSet id="1" author="W102350">
        <createTable tableName="BAND_ENTITY">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Erzeugen der Album-Tabelle -->
    <changeSet id="2" author="W102350">
        <createTable tableName="ALBUM_ENTITY">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="release_date" type="varchar(255)"/>
             <column name="signature" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="purchase_price" type="decimal(10, 2)"/>
            <column name="current_value" type="decimal(10, 2)"/>
            <column name="cover_url" type="varchar(255)"/>
            <column name="band_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Hinzufügen des Fremdschlüssels von der Album-Tabelle zur Band-Tabelle -->
    <changeSet id="3" author="dein_name">
        <addForeignKeyConstraint
            baseTableName="ALBUM_ENTITY"
            baseColumnNames="band_id"
            referencedTableName="BAND_ENTITY"
            referencedColumnNames="id"
            constraintName="fk_album_band"/>
    </changeSet>

</databaseChangeLog>
